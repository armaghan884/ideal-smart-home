                            <label class="form-label" for="name">Name of device</label>
                            <input class="form-control" id="name" type="text" name="name" placeholder="Name of device"
                                required value="<%= deviceData.name %>">
                        </div>
                        <div class="status_drop col">
                            <label class="form-label" for="status">Device status</label>
                            <select class="form-select" name="status" id="status">
                                <option selected value="ON">ON</option>
                                <option value="OFF">OFF</option>
                            </select>
                        </div>
                    </div>


                    <div class="setting col w-100">
                        <label class="form-label" for="setting">Volume of TV</label>
                        <div class="range">
                            <input class="form-range" type="range" min="0" max="100" value="50" class="slider"

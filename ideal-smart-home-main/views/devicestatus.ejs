<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Device Status</title>
    <!-- Bootsrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

</head>

<body>
    <!-- Navigation bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><img src="https://img.icons8.com/carbon-copy/100/000000/circuit.png"
                    width="30" height="30" class="d-inline-block align-text-top" style="filter: invert(100%);" />Smart
                Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/adddevice">Add Device</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/devicestatus">Device Status</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About</a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>

    <!-- Heading -->
    <div class="container">

        <h1 class="text-center display-3">
            <%= title %>
        </h1>
        <!-- Card for table -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col">Device Data</div>
                    <!-- Add device page button -->
                    <div class="col">
                        <a href="/adddevice" class="btn btn-outline-success btn-sm float-end">Add More</a>
                    </div>
                </div>
            </div>
            <!-- Table for showing the data -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <!-- Heading for data fields -->
                        <thead>
                            <tr>
                                <th>Device Type</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Setting</th>
                                <th>Extra Setting</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            <!-- Data body using js to loop over data and show it appropriately -->
                            <% if(deviceData.length> 0)
                                {
                                deviceData.forEach(function(data){
                                %>
                                <!-- Television table---------------------------------------------------------------------------->
                                <tr scope="row">
                                    <% if(data.device_type=='Television' ) { %>
                                        <td>
                                            <%= data.device_type %>
                                        </td>
                                        <td>
                                            <%= data.name %>
                                        </td>
                                        <td>
                                            <%= data.status %>
                                        </td>
                                        <td> Volume:
                                            <%= data.setting %>
                                        </td>
                                        <td> Channel:
                                            <%= data.extra_setting %>
                                        </td>
                                        <td>
                                            <!-- Edit and delete buttons controlling the devices -->
                                            <a href="/devicestatus/edit/<%= data.id %>"
                                                class="btn btn-outline-info btn-sm">Edit</a>
                                            <a href="/devicestatus/delete/<%= data.id %>"
                                                class="btn btn-outline-danger btn-sm">Delete</a>
                                        </td>
                                        <!-- Speaker Table---------------------------------------------------------------------------->
                                        <% } if(data.device_type=='Speakers' ) { %>
                                            <td>
                                                <%= data.device_type %>
                                            </td>
                                            <td>
                                                <%= data.name %>
                                            </td>
                                            <td>
                                                <%= data.status %>
                                            </td>
                                            <td> Volume:
                                                <%= data.setting %>
                                            </td>
                                            <td> Playlist:
                                                <%= data.extra_setting %>
                                            </td>
                                            <td>
                                                <!-- Edit and delete buttons controlling the devices -->
                                                <a href="/devicestatus/edit/<%= data.id %>"
                                                    class="btn btn-outline-info btn-sm">Edit</a>
                                                <a href="/devicestatus/delete/<%= data.id %>"
                                                    class="btn btn-outline-danger btn-sm">Delete</a>
                                            </td>
                                            <!-- A/C Table---------------------------------------------------------------------------->
                                            <% } if(data.device_type=='A/C' ) { %>
                                                <td>
                                                    <%= data.device_type %>
                                                </td>
                                                <td>
                                                    <%= data.name %>
                                                </td>
                                                <td>
                                                    <%= data.status %>
                                                </td>
                                                <td> Temperature:
                                                    <%= data.setting %>C
                                                </td>
                                                <td> Room:
                                                    <%= data.extra_setting %>
                                                </td>
                                                <td>
                                                    <!-- Edit and delete buttons controlling the devices -->
                                                    <a href="/devicestatus/edit/<%= data.id %>"
                                                        class="btn btn-outline-info btn-sm">Edit</a>
                                                    <a href="/devicestatus/delete/<%= data.id %>"
                                                        class="btn btn-outline-danger btn-sm">Delete</a>
                                                </td>
                                                <!-- Heating Table---------------------------------------------------------------------------->
                                                <% } if(data.device_type=='Heating' ) { %>
                                                    <td>
                                                        <%= data.device_type %>
                                                    </td>
                                                    <td>
                                                        <%= data.name %>
                                                    </td>
                                                    <td>
                                                        <%= data.status %>
                                                    </td>
                                                    <td> Temperature:
                                                        <%= data.setting %>C
                                                    </td>
                                                    <td> Room:
                                                        <%= data.extra_setting %>
                                                    </td>
                                                    <td>
                                                        <!-- Edit and delete buttons controlling the devices -->
                                                        <a href="/devicestatus/edit/<%= data.id %>"
                                                            class="btn btn-outline-info btn-sm">Edit</a>
                                                        <a href="/devicestatus/delete/<%= data.id %>"
                                                            class="btn btn-outline-danger btn-sm">Delete</a>
                                                    </td>
                                                    <!-- Blinds Table---------------------------------------------------------------------------->
                                                    <% } if(data.device_type=='Blinds' ) { %>
                                                        <td>
                                                            <%= data.device_type %>
                                                        </td>
                                                        <td>
                                                            <%= data.name %>
                                                        </td>
                                                        <td>
                                                            <%= data.status %>
                                                        </td>
                                                        <td> Opening Level:
                                                            <%= data.setting %>%
                                                        </td>
                                                        <td> Room:
                                                            <%= data.extra_setting %>
                                                        </td>
                                                        <td>
                                                            <!-- Edit and delete buttons controlling the devices -->
                                                            <a href="/devicestatus/edit/<%= data.id %>"
                                                                class="btn btn-outline-info btn-sm">Edit</a>
                                                            <a href="/devicestatus/delete/<%= data.id %>"
                                                                class="btn btn-outline-danger btn-sm">Delete</a>
                                                        </td>
                                                        <!-- Doors Table---------------------------------------------------------------------------->
                                                        <% } if(data.device_type=='Doors' ) { %>
                                                            <td>
                                                                <%= data.device_type %>
                                                            </td>
                                                            <td>
                                                                <%= data.name %>
                                                            </td>
                                                            <td>
                                                                <%= data.status %>
                                                            </td>
                                                            <td> Room:
                                                                <%= data.setting %>
                                                            </td>
                                                            <td></td>
                                                            <td>
                                                                <!-- Edit and delete buttons controlling the devices -->
                                                                <a href="/devicestatus/edit/<%= data.id %>"
                                                                    class="btn btn-outline-info btn-sm">Edit</a>
                                                                <a href="/devicestatus/delete/<%= data.id %>"
                                                                    class="btn btn-outline-danger btn-sm">Delete</a>
                                                            </td>
                                                            <!-- Lights Table---------------------------------------------------------------------------->
                                                            <% } if(data.device_type=='Lights' ) { %>
                                                                <td>
                                                                    <%= data.device_type %>
                                                                </td>
                                                                <td>
                                                                    <%= data.name %>
                                                                </td>
                                                                <td>
                                                                    <%= data.status %>
                                                                </td>
                                                                <td> Intensity:
                                                                    <%= data.setting %>
                                                                </td>
                                                                <td> Room:
                                                                    <%= data.extra_setting %>
                                                                </td>
                                                                <td>
                                                                    <!-- Edit and delete buttons controlling the devices -->
                                                                    <a href="/devicestatus/edit/<%= data.id %>"
                                                                        class="btn btn-outline-info btn-sm">Edit</a>
                                                                    <a href="/devicestatus/delete/<%= data.id %>"
                                                                        class="btn btn-outline-danger btn-sm">Delete</a>
                                                                </td>
                                                                <!-- Security cameras Table---------------------------------------------------------------------------->
                                                                <% } if(data.device_type=='Security Cameras' ) { %>
                                                                    <td>
                                                                        <%= data.device_type %>
                                                                    </td>
                                                                    <td>
                                                                        <%= data.name %>
                                                                    </td>
                                                                    <td>
                                                                        <%= data.status %>
                                                                    </td>
                                                                    <td> Room:
                                                                        <%= data.setting %>
                                                                    </td>
                                                                    <td></td>
                                                                    <td>
                                                                        <!-- Edit and delete buttons controlling the devices -->
                                                                        <a href="/devicestatus/edit/<%= data.id %>"
                                                                            class="btn btn-outline-info btn-sm">Edit</a>
                                                                        <a href="/devicestatus/delete/<%= data.id %>"
                                                                            class="btn btn-outline-danger btn-sm">Delete</a>
                                                                    </td>
                                                                    <!-- Fridge Table---------------------------------------------------------------------------->
                                                                    <% } if(data.device_type=='Fridge' ) { %>
                                                                        <td>
                                                                            <%= data.device_type %>
                                                                        </td>
                                                                        <td>
                                                                            <%= data.name %>
                                                                        </td>
                                                                        <td>
                                                                            <%= data.status %>
                                                                        </td>
                                                                        <td> Temperature:
                                                                            <%= data.setting %>C
                                                                        </td>
                                                                        <td> Room:
                                                                            <%= data.extra_setting %>
                                                                        </td>

                                                                        <td>
                                                                            <!-- Edit and delete buttons controlling the devices -->
                                                                            <a href="/devicestatus/edit/<%= data.id %>"
                                                                                class="btn btn-outline-info btn-sm">Edit</a>
                                                                            <a href="/devicestatus/delete/<%= data.id %>"
                                                                                class="btn btn-outline-danger btn-sm">Delete</a>
                                                                        </td>
                                                                        <!-- Water sprinkler Table---------------------------------------------------------------------------->
                                                                        <% } if(data.device_type=='Water Sprinkler' ) {
                                                                            %>
                                                                            <td>
                                                                                <%= data.device_type %>
                                                                            </td>
                                                                            <td>
                                                                                <%= data.name %>
                                                                            </td>
                                                                            <td>
                                                                                <%= data.status %>
                                                                            </td>
                                                                            <td> Intensity:
                                                                                <%= data.setting %>
                                                                            </td>
                                                                            <td> Garden:
                                                                                <%= data.extra_setting %>
                                                                            </td>
                                                                            <td>
                                                                                <!-- Edit and delete buttons controlling the devices -->
                                                                                <a href="/devicestatus/edit/<%= data.id %>"
                                                                                    class="btn btn-outline-info btn-sm">Edit</a>
                                                                                <a href="/devicestatus/delete/<%= data.id %>"
                                                                                    class="btn btn-outline-danger btn-sm">Delete</a>
                                                                            </td>
                                                                            <% } %>



                                </tr>
                                <!-- Closing the functions and if no data is found then shows the "No Data Found" -->
                                <% }); } else { %>
                                    <tr>
                                        <td colspan="5">No Data Found</td>
                                    </tr>
                                    <% } %>
                        </tbody>

                    </table>
                </div>
            </div>
        </div>



    </div>

</body>

</html>